{
    "name": "@repo/style",
    "version": "0.0.1",
    "private": true,
    "exports": {
        "./button": "./src/button/button.tsx"
    },
    "scripts": {
        "lint": "eslint . --max-warnings 10",
        "generate:component": "turbo gen react-component",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"bun build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && bun test-storybook\""
    },
    "dependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "@stylexjs/stylex": "0.4.1"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@storybook/addon-essentials": "7.6.7",
        "@storybook/addon-interactions": "7.6.7",
        "@storybook/addon-links": "7.6.7",
        "@storybook/addon-onboarding": "1.0.10",
        "@storybook/blocks": "7.6.7",
        "@storybook/react": "7.6.7",
        "@storybook/react-webpack5": "7.6.7",
        "@storybook/test": "7.6.7",
        "@turbo/gen": "1.11.2",
        "@types/eslint": "8.56.1",
        "@types/node": "20.10.6",
        "@types/react": "18.2.46",
        "@types/react-dom": "18.2.18",
        "eslint": "8.56.0",
        "eslint-plugin-storybook": "0.6.15",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "storybook": "7.6.7",
        "typescript": "5.3.3",
        "@stylexjs/babel-plugin": "0.4.1",
        "@stylexjs/eslint-plugin": "0.4.1",
        "prettier": "^3.1.1"
    }
}
